{
    "name": "musikanimal/global-search",
    "description": "A tool to do keyword and source regex searches across all Wikimedia Foundation wikis.",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "allocine/twigcs": "^3.1",
        "eightpoints/guzzle-bundle": "^7.5",
        "sensio/framework-extra-bundle": "^5.3",
        "symfony/cache": "4.3.*",
        "symfony/console": "4.3.*",
        "symfony/dotenv": "4.3.*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "4.3.*",
        "symfony/twig-bundle": "4.2.*",
        "symfony/webpack-encore-bundle": "^1.5",
        "symfony/yaml": "4.3.*",
        "twig/extensions": "^1.5",
        "wikimedia/toolforge-bundle": "^0.18.0"
    },
    "require-dev": {
        "mediawiki/minus-x": "^0.3.2",
        "slevomat/coding-standard": "^5.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/var-dumper": "4.3.*",
        "symfony/web-server-bundle": "4.3.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "composer validate",
            "./bin/console lint:twig ./templates",
            "./bin/console lint:yaml config",
            "./vendor/bin/phpcs -s .",
            "./vendor/bin/twigcs templates/",
            "./vendor/bin/minus-x check ."
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.2.*"
        }
    }
}
